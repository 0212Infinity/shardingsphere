<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sharding-jdbc="http://shardingjdbc.io/schema/shardingjdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                        http://www.springframework.org/schema/beans/spring-beans.xsd 
                        http://shardingjdbc.io/schema/shardingjdbc 
                        http://shardingjdbc.io/schema/shardingjdbc/sharding-jdbc.xsd 
                        ">
    <import resource="datasource/dataSource.xml" />
    
    <sharding-jdbc:strategy id="databaseStrategy" type="inline" sharding-columns="user_id" algorithm-expression="dbtbl_${user_id % 2}"/>
    
    <sharding-jdbc:strategy id="orderTableStrategy" type="inline" sharding-columns="order_id" algorithm-expression="t_order_${order_id % 4}"/>
    
    <sharding-jdbc:strategy id="orderItemTableStrategy" type="inline" sharding-columns="order_id" algorithm-expression="t_order_item_${order_id % 4}"/>
    
    <sharding-jdbc:data-source id="shardingDataSource">
        <sharding-jdbc:sharding-rule data-sources="dbtbl_0,dbtbl_1" default-data-source="dbtbl_0">
            <sharding-jdbc:table-rules>
                <sharding-jdbc:table-rule logic-table="t_order" actual-tables="t_order_${0..3}" database-strategy="databaseStrategy" table-strategy="orderTableStrategy"/>
                <sharding-jdbc:table-rule logic-table="t_order_item" actual-tables="t_order_item_${0..3}" database-strategy="databaseStrategy"  table-strategy="orderItemTableStrategy"/>
            </sharding-jdbc:table-rules>
        </sharding-jdbc:sharding-rule>
    </sharding-jdbc:data-source>
</beans>
